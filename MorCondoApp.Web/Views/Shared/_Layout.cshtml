@{
    Layout = null;
}

@{
    var nomeUsuario = User.Identity.IsAuthenticated ? User.Identity.Name : "Visitante";
    var emailUsuario = User.Claims.FirstOrDefault(c => c.Type == System.Security.Claims.ClaimTypes.Email)?.Value ?? "email@desconhecido.com";
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - MorCondoApp</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/lucide/0.263.1/lucide.min.css" rel="stylesheet">
</head>
<body>
    <div class="app-container">
        <!-- Sidebar -->
        <nav class="sidebar" id="sidebar">
            <div class="sidebar-header">
                <div class="logo-container">                    
                    <div class="logo-text">                        
                        <span class="logo-title">MorCondoApp</span>
                        @* <a href="#">
                            <img src="~/img/logoSite.png" alt="Logo MorCondoApp" style="max-width: 100%; height: auto; max-height: 80px; margin-top: 10px;" />
                        </a> *@
                        <a href="/Home/Index" class="d-flex justify-content-center">
                            <img src="~/img/logoSite.png" alt="Logo MorCondoApp"
                                 class="img-fluid rounded-circle mt-2 mb-2"
                                 style="max-width: 80px;" />
                        </a>
                        <span class="logo-subtitle">Sistema de Gestão de Condomínios</span>
                    </div>
                </div>
            </div>

            <div class="sidebar-content">
                <div class="sidebar-group">
                    <div class="sidebar-group-label">Menu Principal</div>
                    <ul class="sidebar-menu">
                        <li class="sidebar-menu-item">
                            <a href="/Home/Index" class="sidebar-menu-button">
                                <i data-lucide="home"></i>
                                <span>Dashboard</span>
                                <i data-lucide="chevron-right" class="chevron"></i>
                            </a>
                        </li>
                        <li class="sidebar-menu-item">
                            <a href="/Cliente/Index" class="sidebar-menu-button">
                                <i data-lucide="users"></i>
                                <span>Cliente</span>
                                <i data-lucide="chevron-right" class="chevron"></i>
                            </a>
                        </li>
                        <li class="sidebar-menu-item">
                            <a href="/Condominio/Index" class="sidebar-menu-button">
                                <i data-lucide="building-2"></i>
                                <span>Condomínios</span>
                                <i data-lucide="chevron-right" class="chevron"></i>
                            </a>
                        </li>
                        <li class="sidebar-menu-item">
                            <a href="/Financeiro/Index" class="sidebar-menu-button">
                                <i data-lucide="dollar-sign"></i>
                                <span>Financeiro</span>
                                <i data-lucide="chevron-right" class="chevron"></i>
                            </a>
                        </li>
                        <li class="sidebar-menu-item">
                            <a href="/Reservas/Index" class="sidebar-menu-button">
                                <i data-lucide="calendar"></i>
                                <span>Reservas</span>
                                <i data-lucide="chevron-right" class="chevron"></i>
                            </a>
                        </li>
                        <li class="sidebar-menu-item">
                            <a href="/Avisos/Index" class="sidebar-menu-button">
                                <i data-lucide="bell"></i>
                                <span>Avisos</span>
                                <i data-lucide="chevron-right" class="chevron"></i>
                            </a>
                        </li>
                        <li class="sidebar-menu-item">
                            <a href="/Documento/Index" class="sidebar-menu-button">
                                <i data-lucide="file-text"></i>
                                <span>Documentos</span>
                                <i data-lucide="chevron-right" class="chevron"></i>
                            </a>
                        </li>
                        <li class="sidebar-menu-item">
                            <a href="/Veiculos/Index" class="sidebar-menu-button">
                                <i data-lucide="car"></i>
                                <span>Veículos</span>
                                <i data-lucide="chevron-right" class="chevron"></i>
                            </a>
                        </li>
                        <li class="sidebar-menu-item">
                            <a href="/Seguranca/Index" class="sidebar-menu-button">
                                <i data-lucide="shield"></i>
                                <span>Segurança</span>
                                <i data-lucide="chevron-right" class="chevron"></i>
                            </a>
                        </li>
                    </ul>
                </div>

                <div class="sidebar-group">
                    <div class="sidebar-group-label">Administração</div>
                    <ul class="sidebar-menu">
                        <li class="sidebar-menu-item">
                            <a href="/Configuracoes/Index" class="sidebar-menu-button admin">
                                <i data-lucide="settings"></i>
                                <span>Configurações</span>
                                <i data-lucide="chevron-right" class="chevron"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="sidebar-footer">
                <div class="user-info">
                    <div class="user-avatar">
                        <i data-lucide="users"></i>
                    </div>
                    <div class="user-details">
                        <span class="user-name">@nomeUsuario</span>
                        <span class="user-email">@emailUsuario</span>
                    </div>
                </div>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="main-content">
            <!-- Header -->
            <header class="main-header">
                <div class="header-content">
                    <button class="sidebar-toggle" id="sidebarToggle">
                        <i data-lucide="panel-left"></i>
                    </button>
                    <div class="header-text">
                        <h1 class="page-title">@ViewData["Title"]</h1>
                        <p class="page-subtitle">Bem-vindo ao sistema de gestão do condomínio</p>
                    </div>
                </div>
            </header>

            <!-- Dynamic Page Content -->
            <div class="page-content">
                @RenderBody()
            </div>
        </main>
    </div>

    <!-- Scripts -->
    <script src="https://unpkg.com/lucide@latest/dist/umd/lucide.js"></script>
    <script>
        lucide.createIcons();
    </script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
