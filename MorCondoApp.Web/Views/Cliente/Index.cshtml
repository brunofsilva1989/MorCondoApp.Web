@model IEnumerable<MorCondoApp.Application.DTOs.ClienteDto>


<h2>Clientes</h2>

<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Email</th>
                <th>Telefone</th>
                <th>Data de Cadastro</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cliente in Model)
            {
                <tr>
                    <td>@cliente.Nome</td>
                    <td>@cliente.Email</td>
                    <td>@cliente.Telefone</td>
                    <td>@cliente.DataCadastro.ToString("dd/MM/yyyy")</td>

                    <td>
                        <a href="@Url.Action("Details", "Cliente", new { id = cliente.Id })">Detalhes</a>
                        <a href="@Url.Action("Edit", "Cliente", new { id = cliente.Id })">Editar</a>
                        <a href="@Url.Action("Delete", "Cliente", new { id = cliente.Id })">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
</div>



